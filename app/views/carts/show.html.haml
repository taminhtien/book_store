%ul
  - @cart.line_items.each do |line_item|
    %li
      %h4.pull-right= number_to_currency(line_item.book.price)
      %h4.title= link_to truncate(line_item.book.title, length: 15), line_item.book
      %p= truncate(line_item.book.description, length: 100)
      %p= line_item.quantity
      %p= number_to_currency(line_item.total_price)
  
  Total price:
  = number_to_currency(@cart.total_price)
= button_to "Empty cart", @cart, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' }